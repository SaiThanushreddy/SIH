generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Add your PostgreSQL connection string here
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?  @unique // For Google Login
  createdAt DateTime @default(now())
  orders    Order[]
}

model Product {
  id          String          @id @default(cuid())
  name        String
  description String
  price       Float
  imageUrl    String          // URL to the product image
  stock       Int             // Number of items in stock
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  orderItems  OrderProduct[]  // Add this to define the reverse relation
}

model Order {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  products      OrderProduct[]
  totalAmount   Float
  status        OrderStatus @default(PENDING) // PENDING, COMPLETED, CANCELED
  pickupPoint   String      // Hardcoded pickup point
  createdAt     DateTime    @default(now())
}


model OrderProduct {
  id         String   @id @default(cuid())
  orderId    String
  productId  String
  quantity   Int
  order      Order    @relation(fields: [orderId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELED
}
